@import '../../bootstrap'
@import '../../theme'

.footer
  &--absolute, &--fixed
    left: auto
    right: 0

  > *:first-child
    margin-left: auto
    margin-right: $grid-gutters.md

  > *:last-child
    margin-right: auto
    margin-left: $grid-gutters.md

  @media $display-breakpoints.xs-only
    > *:first-child
      margin-left: auto
      margin-right: $grid-gutters.lg

    > *:last-child
      margin-right: auto
      margin-left: $grid-gutters.lg
