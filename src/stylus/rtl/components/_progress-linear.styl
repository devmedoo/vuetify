.progress-linear
  &__bar
    &__indeterminate
      .long, .short
        left: auto
        right: 0
        will-change: right, left

  &__background
    left: auto
    right: 0

  @keyframes indeterminate
    0%
      right: -90%
      left: 100%
    60%
      right: -90%
      left: 100%
    100%
      right: 100%
      left: -35%

  @keyframes indeterminate-short
    0%
      right: -200%
      left: 100%
    60%
      right: 107%
      left: -8%
    100%
      right: 107%
      left: -8%

  @keyframes query
    0%
      left: -90%
      right: 100%
    60%
      left: -90%
      right: 100%
    100%
      left: 100%
      right: -35%

  @keyframes query-short
    0%
      left: -200%
      right: 100%
    60%
      left: 107%
      right: -8%
    100%
      left: 107%
      right: -8%
